{
  "rules": {
    "id-length": "off",
    "max-lines": "off",
    "max-lines-per-function": "off",
    "max-statements": "off",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [-1, 0, 1]
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": ["err"]
      }
    ],
    "one-var": "off"
  }
}
